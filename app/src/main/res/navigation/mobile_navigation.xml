<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.thenote1.ui.home.HomeFragment"
        android:label="Поделиться"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="gallery.GalleryFragment"
        android:label="Настройки"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="slideshow.SlideshowFragment"
        android:label="О разработчике"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/noteFragment"
        android:name="notfragment.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" />
</navigation>